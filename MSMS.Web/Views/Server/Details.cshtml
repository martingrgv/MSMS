@model ServerDetailsViewModel

@{
    ViewBag.Title = "Server Details";
}

<div class="container-fluid mb-5">
    <div class="row">
        <div class="banner-container">
            <img src="@Model.ImagePath" class="banner-image img-fluid w-100" alt="Server banner">
        </div>
    </div>
    <p class="server-name">@Model.Name</p>
    <p class="text-secondary server-ip">IP: @Model.IpAddress</p>
    <p class="server-game-version"><span class="text-secondary">Version:</span> @Model.GameVersion</p>
    <p class="server-owner"><span class="text-secondary">Owner:</span> @Model.OwnerName</p>

</div>

<div class="container">
    <div class="row d-flex justify-content-center flex-wrap mt-5 gap-3 gap-sm-1">
        @foreach (var world in @Model.Worlds)
        {
            <div class="col">
                <a asp-controller="Server" asp-action="World" asp-route-id="@Model.Id" asp-route-worldType="@world.WorldType">
                    <div class="world-card">
                        <img src="@world.ImagePath" class="world-card-img-top" alt="World banner">
                        <div class="card-img-overlay d-flex justify-content-center align-items-center">
                            <h2 class="text-blocky text-vertical">@world.WorldType</h2>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>