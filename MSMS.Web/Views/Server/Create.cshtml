@model ServerFormModel

@{
    ViewBag.Title = "Create Server";
}

<div class="container mt-5">
    <h1 class="display-2 text-center text-blocky">CREATE SERVER</h1>

    <form asp-action="Create" asp-controller="Server" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="@Model.ServerName" class="control-label"></label>
            <input asp-for="@Model.ServerName" class="form-control" />
            <span asp-validation-for="@Model.ServerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ServerIp" class="control-label"></label>
            <input asp-for="@Model.ServerIp" class="form-control" />
            <span asp-validation-for="@Model.ServerIp" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.GameVersion" class="control-label"></label>
            <input asp-for="@Model.GameVersion" class="form-control" />
            <span asp-validation-for="@Model.GameVersion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PlayMode" class="control-label"></label>
            <select asp-for="@Model.PlayMode" class="form-control" asp-items="Html.GetEnumSelectList<MSMS.Infrastructure.Data.Enums.PlayMode>()"></select>
            <span asp-validation-for="@Model.PlayMode" class="text-danger"></span>
        </div>
        <div class="form-group">
    using MSMS.Core.Models;
            <label asp-for="@Model.Description" class="control-label"></label>
            <textarea asp-for="@Model.Description" class="form-control"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    using Microsoft.CodeAnalysis.Scripting;
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}