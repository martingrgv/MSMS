@model IEnumerable<ServerViewModel>

@{
    ViewBag.Title = "Servers";
}

<div class="container mt-5">

@if (Model.Count() == 0)
{
	<h1 class="display-2 text-center text-blocky">NO SERVER YET</h1>
	<h4 class="display-4 text-center text-blocky">YOU CAN CREATE ONE YOURSELF</h4>
}
else
{
	<h1 class="display-2 text-center text-blocky">SERVERS</h1>
	<div class="row m-2 mt-5 g-2">
	@foreach (var server in Model)
	{
		<div class="col-md-4 mb-5">
			<div class="card h-100 w-100 m-5">
				<img class="card-img-top" src="@server.ImagePath" alt="Server banner">
				<div class="card-body">
					<h5 class="card-title">@server.Name</h5>
					<p class="card-text">IP: @server.IpAddress</p>
					<p>Owner: @server.OwnerName</p>
					<a asp-controller="Server" asp-action="Details" asp-route-id="@server.Id" class="btn btn-primary">DETAILS</a>
				</div>
			</div>
		</div>
	}
	</div>
}
</div>

<a href="/Server/Create" class="btn-add">+</a>
