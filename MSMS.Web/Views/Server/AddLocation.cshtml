@model ServerLocationFormModel 
@{
    ViewBag.Title = "New Location";
}

<div class="container mt-5">
    <h1 class="display-2 text-center text-blocky">NEW LOCATION</h1>

    <form asp-action="AddLocation" asp-controller="Server" method="post" class="mt-4">
        <div class="form-group">
            <input asp-for="@Model.Name" class="form-control" placeholder="LOCATION NAME:" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.Coordinates" class="form-control" placeholder="COORDINATES:" />
            <span asp-validation-for="@Model.Coordinates" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="@Model.LocationType" asp-items="Html.GetEnumSelectList<MSMS.Infrastructure.Data.Enums.LocationType>()" class="form-control" aria-placeholder="SELECT TYPE "></select>
            <span asp-validation-for="@Model.LocationType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select asp-for="@Model.AccessModifier" asp-items="Html.GetEnumSelectList<MSMS.Infrastructure.Data.Enums.LocationAccessModifier>()" class="form-control" aria-placeholder="SELECT VISIBILITY "></select>
            <span asp-validation-for="@Model.AccessModifier" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.Description" class="form-control" placeholder="DESCRIPTION: "></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary btn-xl">CREATE LOCATION</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


