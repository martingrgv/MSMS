@model ManagerPanelStatisticsViewModel

@{
    ViewBag.Title = "Owner Panel";
}


<div class="container mt-5">
	<h1 class="display-2 text-center text-blocky">MANAGER PANEL</h1>

    <div class="d-flex justify-content-between align-items-center">
        <h2>Servers: @Model.ServersCount</h2>
        <h2>Players: @Model.TotalServersUsersCount</h2>
    </div>

    <div class="d-block">
        <a asp-area="" asp-controller="Server" asp-action="Create" class="btn btn-primary">CREATE NEW SERVER</a>
        <a asp-area="Manager" asp-controller="Panel" asp-action="Servers" class="btn btn-primary">MY SERVERS</a>

        <form asp-area="Manager" asp-controller="Panel" asp-action="DeleteUserServers" method="post">
            <button type="submit" class="btn btn-danger">DELETE ALL SERVERS</button>
        </form>
    </div>
</div>